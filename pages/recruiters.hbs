            </a>
            <div class="recruiter-hero__img">
                <img src="../assets/img/recruiters-mockup.png">
            </div>
        </div>
    </section>
{{/with}}

{{#with about_showcase}}
    <section class="main-showcase">
        <div class="container">
            <div class="main-showcase__wrapper">
                <div class="main-showcase__demo-about">
                    <h2>{{header}}</h2>
                </div>
                <div class="main-showcase__info-about">
                    <div class="main-showcase__info-text">
                        <h2>{{subtitle}}</h2>
                        <p>{{copy}}</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
{{/with}}

{{#with recruiter_features}}
    <section class="recruiter-features">
        <div class="container">
            <div class="recruiter-features__wrapper">
                <div class="recruiter-features__left">
                    <h2>{{header}}</h2>
                    <hr class="header-hr">
                </div>
                <div class="recruiter-features__center">
                    <img src="../assets/img/mobile-mockup.png">
                </div>
                <div class="recruiter-features__right">
                    {{#each list_of_features}}
                        <div class="recruiter-features__item">
                            <div class="recruiter-features__item-img">
                                <img src="{{img_url}}">
                            </div>
                            <div class="recruiter-features__item-copy">
                                <h4>{{title}}</h4>
                                <p>{{copy}}</p>
                            </div>
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </section>
{{/with}}

