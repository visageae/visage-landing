{{#with recruiter_hero}}
    <section id="recruiter-hero" class="recruiter-hero">
        <div class="recruiter-hero__container">
            <div class="recruiter-hero__bg"></div>
            <h2 class="recruiter-hero__title">{{header}}</h2>
            <a class="btn-round btn-primary-dark recruiter-hero__btn"
               href="https://app.visage.jobs/login"
               aria-label="Sign up">
